{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "rootDir": "packages"
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx"],
  "exclude": [
    "packages/**/*.stories.ts",
    "packages/**/*.stories.tsx",
    "packages/**/*.test.ts",
    "packages/**/*.test.tsx",
    "node_modules",
    "dist"
  ]
}
