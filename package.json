  "scripts": {
    "dev": "lsof -ti:5100 | xargs kill -9 2>/dev/null; storybook dev --port 5100",
    "build:storybook": "storybook build",
    "build:core": "vite build --config configs/vite.config.core.ts && tsc -p configs/tsconfig.core.json && tsc-alias -p configs/tsconfig.core.json",
    "build:react": "npm run build:core && vite build --config configs/vite.config.react.ts && tsc -p configs/tsconfig.react.json && tsc-alias -p configs/tsconfig.react.json",
    "build:vue": "npm run build:core && vite build --config configs/vite.config.vue.ts && tsc -p configs/tsconfig.vue.json && tsc-alias -p configs/tsconfig.vue.json",
    "prepare": "husky",
    "test": "vitest run --config configs/vitest.config.ts --coverage",
    "test:ui": "vitest --config configs/vitest.config.ts --coverage --ui",
    "check:type:core": "tsc -p configs/tsconfig.core.json --noEmit",
    "check:type:react": "tsc -p configs/tsconfig.react.json --noEmit",
    "check:type:vue": "tsc -p configs/tsconfig.vue.json --noEmit",
    "check:type": "npm run check:type:core && npm run check:type:react && npm run check:type:vue",
    "check:eslint": "eslint . --cache --cache-location=./.cache/.eslintcache",
    "check:stylelint": "stylelint 'src/**/*.css' '.storybook/**/*.css' --cache --cache-location=./.cache/.stylelintcache",
    "check:prettier": "prettier . --check --ignore-unknown --cache --cache-location=./.cache/.prettiercache",
    "check:cspell": "cspell --cache --cache-location=./.cache/.cspellcache --no-progress --show-suggestions '**/*.{ts,tsx,js,jsx,json,vue,md,mdx}'",
    "check": "concurrently --kill-others-on-fail --group --names \"type,eslint,stylelint,prettier,cspell\" \"npm run check:type\" \"npm run check:eslint\" \"npm run check:stylelint\" \"npm run check:prettier\" \"npm run check:cspell\"",
    "format:eslint": "eslint . --fix --cache --cache-location=./.cache/.eslintcache",
    "format:stylelint": "stylelint 'src/**/*.css' '.storybook/**/*.css' --fix --cache --cache-location=./.cache/.stylelintcache",
    "format:prettier": "prettier . --write --ignore-unknown --cache --cache-location=./.cache/.prettiercache",
    "format": "npm run format:eslint && npm run format:stylelint && npm run format:prettier",
    "clean:dist": "rm -rf dist",
    "clean:cache": "rm -rf node_modules/.cache .cache",
    "clean": "npm run clean:dist && npm run clean:cache"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.css": [
      "stylelint",
      "prettier --check"
    ],
    "*.{json,md,mdx,yml,yaml}": [
      "prettier --check"
    ],
    "*.{ts,tsx,js,jsx,json,vue,md,mdx}": [
      "cspell --no-progress"
    ]
  }
}
