{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "../.storybook/**/*.ts",
    "../.storybook/**/*.tsx",
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "../src/**/*.vue"
  ],
  "exclude": ["../node_modules"]
}
