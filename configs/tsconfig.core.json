{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "../dist",
    "rootDir": "../src"
  },
  "include": ["../src/core"],
  "exclude": ["../node_modules", "../dist", "**/*.test.ts"],
  "tsc-alias": {
    "replacers": {
      "base-url": {
        "enabled": false
      }
    }
  }
}
